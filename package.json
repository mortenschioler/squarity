{
  "name": "squarity",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run watch",
    "watch": "run-p watch:app watch:css",
    "watch:app": "shadow-cljs watch app",
    "watch:css": "npx tailwindcss -i ./public/css/style.css -o ./public/css/tailwind.css --watch",
    "build": "npm run release",
    "release": "run-s release:css release:app",
    "release:app": "shadow-cljs release app",
    "release:css": "npx tailwindcss -i ./public/css/style.css -o ./public/css/tailwind.css --minify",
    "build:azure": "",
    "build-verbose": "shadow-cljs release --verbose app",
    "report": "shadow-cljs run shadow.cljs.build-report app report.html",
    "debug-build": "shadow-cljs release app --debug",
    "serve": "sirv ./public --cors --single --no-clear --port 3000 --dev --max-age 0",
    "dev-build": "shadow-cljs compile app",
    "repl": "shadow-cljs cljs-repl app",
    "browser-repl": "shadow-cljs browser-repl",
    "clojure-repl": "shadow-cljs clj-repl",
    "test": "shadow-cljs watch test",
    "test-browser": "shadow-cljs watch test-browser",
    "test-once": "shadow-cljs compile test",
    "clean": "rimraf public/js",
    "nuke": "rimraf public/js .shadow-cljs node_modules yarn.lock package-lock.json out report.html",
    "shadow-cljs-server": "shadow-cljs server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shadow-cljs": "2.11.18",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "^3.1.8"
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  }
}
